#include "std_lib_facilities.h"

int main()
{
	cout<<"Írj be egy számot: \n";
	double i=0, szam, small, large;
	while(cin>>szam)
	{
		if(i==0)
		{
		  cout<<"Első szám: "<<szam<<"\n";
		  small=szam;
		}
		else

		if (szam<small)
		{
		  small=szam;
		  cout<<"A legkisebb szám eddig: "<<szam<<"\n";    
		}	
		else

		if (szam>large)
		{
		  large=szam;
		  cout<<"A legnyagyobb szám eddig: "<<szam<<"\n";    
		}		

		++i;

	}

}
